@model List<ProdutoModel>
@{
    ViewData["Title"] = "Produtos";
}

<div class="text-center">

    <div class="display-4" style="font-size: 50px; margin-bottom: 40px;">Listagem de Produtos</div>

    <div class="d-grid gap-2 d-md-flex justify-content-md-end">

        <a class="btn btn-primary" role="button" style="margin-bottom: 40px; margin-top: 40px; margin-right: 50px;" asp-controller="Produto" asp-action="AdicionarProduto">Adicionar Produto</a>

    </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">Código</th>
                <th scope="col">Produto</th>
                <th scope="col">Qtde</th>
                <th scope="col">Valor Unit</th>
                <th scope="col">Total</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (ProdutoModel produto in Model)
                {
                    <tr>
                        <th scope="row">@produto.Codigo</th>
                        <td>@produto.Nome</td>
                        <td>@produto.Qtde</td>
                        <td>@produto.ValorUnit</td>
                        <td>@produto.Total</td>
                        <th>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-primary" style="padding: 6px;" asp-controller="Produto" asp-route-id="@produto.Id" asp-action="EditarProduto">Editar</a>
                                <a role="button" class="btn btn-danger" style="padding: 6px;" asp-controller="Produto"  asp-route-id="@produto.Id" asp-action="ApagarConfirmacao">Apagar</a>
                            </div>
                        </th>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

