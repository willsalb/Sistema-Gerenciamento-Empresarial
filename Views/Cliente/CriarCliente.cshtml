@model ClienteModel
@{
    ViewData["Title"] = "Criar Cliente";
}

<div class="text-center">

    <h1 class="display-4" style="margin-bottom: 40px">Cadastrar cliente</h1>

</div>

<form asp-controller="Cliente" asp-action="CriarCliente" method="post">
    <!--Ao clicar em adicionar vai pegar o post do criar-->
    <div class="form-group">
        <label for="Nome">Nome</label>
                           <!--Mapeando cada input com o modelo de atributo dentro da model-->
        <input type="text" asp-for="Nome" class="form-control" aria-describedby="emailHelp" placeholder="Digite o nome">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>

    <div class="form-group">
        <label for="Nome">CPF/CNPJ</label>
        <input type="text" asp-for="Cpf" class="form-control" aria-describedby="emailHelp" placeholder="Digite o CPF/CNPJ">
        @Html.ValidationMessageFor(x => x.Cpf)
    </div>

    <div class="form-group">
        <label for="email">E-mail</label>
        <input type="text" asp-for="Email" class="form-control" aria-describedby="emailHelp" placeholder="Digite o e-mail">
        @Html.ValidationMessageFor(x => x.Email)
    </div>

    <div class="form-group">
        <label for="celular">Celular</label> 
        <input type="text" asp-for="Celular" class="form-control" aria-describedby="emailHelp" placeholder="Digite o celular">
        @Html.ValidationMessageFor(x => x.Celular)
    </div>

    <button type="submit" class="btn btn-primary">Adicionar</button>
    <a class="btn btn-secondary" asp-controller="Cliente" asp-action="Index" role="button" style="margin-left: 10px;">Voltar</a>
</form>
