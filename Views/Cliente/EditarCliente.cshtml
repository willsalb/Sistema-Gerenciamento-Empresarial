@model ClienteModel
@{
    ViewData["Title"] = "Editar Cliente";
}

<div class="text-center">

    <h1 class="display-4" style="margin-bottom: 40px">Editar cliente</h1>

</div>

<form asp-controller="Cliente" asp-action="Alterar" method="post">

    <!--Id oculto, para o controller receber o id-->
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label for="Nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" aria-describedby="emailHelp" placeholder="Digite o nome">
        @Html.ValidationMessageFor(y => y.Nome)
    </div>

    <div class="form-group">
        <label for="Nome">CPF/CNPJ</label>
        <input type="text" asp-for="Cpf" class="form-control" aria-describedby="emailHelp" placeholder="Digite o CPF/CNPJ">
        @Html.ValidationMessageFor(y => y.Cpf)
    </div>

    <div class="form-group">
        <label for="email">E-mail</label>
        <input type="text" asp-for="Email" class="form-control" aria-describedby="emailHelp" placeholder="Digite o e-mail">
        @Html.ValidationMessageFor(y => y.Email)
    </div>

    <div class="form-group">
        <label for="celular">Celular</label>
        <input type="text" asp-for="Celular" class="form-control" aria-describedby="emailHelp" placeholder="Digite o celular">
        @Html.ValidationMessageFor(y => y.Celular) 
    </div>

    <button type="submit" class="btn btn-primary">Alterar</button>
    <a class="btn btn-secondary" asp-controller="Cliente" asp-action="Index" role="button" style="margin-left: 10px;">Voltar</a>
</form>
