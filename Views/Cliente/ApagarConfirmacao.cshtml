@model ClienteModel
@{
    ViewData["Title"] = "Remover Cliente";
}

<div class="text-center">
                                          <!--Automaticamente vai trazer o nome do cliente-->
    <h3>Realmente deseja apagar o cliente @Model.Nome?</h3>
</div>

<div class="text-center" style="margin-top: 10%;">
    <a class="btn btn-primary" role="button" asp-controller="Cliente" asp-action="Index">Cancelar ação</a>
                                                                                         <!--Id que vai ser deletado-->
    <a class="btn btn-danger" role="button" asp-controller="Cliente" asp-action="Apagar" asp-route-id="@Model.Id">Confimar ação</a>
</div> 